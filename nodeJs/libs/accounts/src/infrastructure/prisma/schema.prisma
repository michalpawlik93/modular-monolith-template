generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_ACCOUNTS")
}

model Account {
  id           String   @id @default(cuid())
  email        String   @unique
  displayName  String
  role         String?
  status       String   @default("active")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
