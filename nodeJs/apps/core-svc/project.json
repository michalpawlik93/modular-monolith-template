{
  "name": "core-svc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/core-svc/src",
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/core-svc/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/core-svc"],
      "options": {
        "jestConfig": "apps/core-svc/jest.config.ts",
        "passWithNoTests": false
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/core-svc",
        "format": ["cjs"],
        "bundle": true,
        "main": "apps/core-svc/src/main.ts",
        "tsConfig": "apps/core-svc/tsconfig.app.json",
        "assets": [
          "apps/core-svc/src/assets",
          "apps/core-svc/.env.*",
          {
            "input": "apps/core-svc/staticFiles",
            "glob": "**/*",
            "output": "staticFiles"
          },
          {
            "input": "libs/core/src/providers/grpc/proto",
            "glob": "**/*.proto",
            "output": "proto"
          }
        ],
        "generatePackageJson": true
      },
      "configurations": {
        "development": {
          "bundle": true,
          "generateLockfile": true,
          "esbuildOptions": {
            "format": "cjs",
            "platform": "node",
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            },
            "loader": {
              ".node": "file"
            }
          }
        },
        "production": {
          "bundle": true,
          "generateLockfile": true,
          "esbuildOptions": {
            "sourcemap": false,
            "minify": true,
            "treeShaking": true,
            "format": "cjs",
            "platform": "node",
            "outExtension": {
              ".js": ".js"
            },
            "loader": {
              ".node": "file"
            }
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "core-svc:build",
        "runtimeArgs": ["--inspect=9229"],
        "watch": true
      },
      "configurations": {
        "development": {
          "buildTarget": "core-svc:build:development"
        },
        "production": {
          "buildTarget": "core-svc:build:production"
        }
      }
    }
  },
  "tags": ["type:app"]
}